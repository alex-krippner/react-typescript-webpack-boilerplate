{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "lib": ["ES5", "DOM"],
    // this project is bundled with webpack, for which
    // webpack docs and programming literature suggests
    // setting module to 'ES2015'
    "module": "es6",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "esModuleInterop": true,
  },
  "include": [
    "src", "assets", "types.d.ts",
    ".babelrc",
    "jest-setup.ts"
  ],
}
